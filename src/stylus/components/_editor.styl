.editor
  position: relative
  background-color: #4a4a4a
  box-shadow: 0 0 4px rgba(0,0,0,.05)
  display: flex;
  flex-direction: column;
  z-index 10;

  &--fullscreen
    position: fixed;
    top: 0;
    width: 100%;
    height: 100% !important;
    left: 0;
    margin: 0 !important;
    z-index 20;


  &__toolbar
    line-height: 36px
    border-bottom: 1px solid rgba(0,0,0,.05)
    display: flex

    label
      overflow: hidden
      position relative
      height: 36px;
      width: 36px;
      display: block;

      input
        position absolute
        width: 1px;
        opacity: 0.001;
        height: 16px;
        overflow: hidden;

    & > span,
    & > a
      width: 36px
      text-align: center
      display: inline-block
      cursor: pointer

      svg
        color: #ddd

      &:hover,
      &.editor__icon--current
        background-color: #313131

        svg
          color: #fff

  &__content
    display: flex
    min-height 200px
    flex: 1

  &__textarea,
  &__markdown
    flex: 1

  &__markdown
    overflow: auto
    padding: 10px
    background-color #f6f6f6
    box-shadow: inset 1px 0 rgba(128,128,128,0.06)

  &__textarea
    background-color #fcfcfc
    textarea
      border: 0
      resize: none
      width: 100%
      box-sizing: border-box
      outline: 0 none
      font-size: 15px
      padding 10px
      height 100%


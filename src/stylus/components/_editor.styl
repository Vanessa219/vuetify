.editor
  position: relative
  background-color: #fff
  box-shadow: 0 0 4px rgba(0,0,0,.05)
  display: flex;
  flex-direction: column;
  z-index 100;

  &--fullscreen
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    left: 0;


  &__toolbar
    line-height: 36px
    border-bottom: 1px solid rgba(0,0,0,.05)
    display: flex

    & > span,
    & > a
      width: 36px
      text-align: center
      display: inline-block
      cursor: pointer

      &:hover,
      &.editor__icon--current
        background-color: rgba(0,0,0,.54)

        svg
          color: #fff

  &__content
    display: flex
    min-height 200px
    flex: 1

  &__textarea,
  &__markdown
    flex: 1

  &__markdown
    border-left: 1px solid rgba(0,0,0,.05)
    padding: 10px

  &__textarea
    textarea
      border: 0
      resize: none
      width: 100%
      box-sizing: border-box
      outline: 0 none
      font-size: 15px
      padding 10px
      height 100%

